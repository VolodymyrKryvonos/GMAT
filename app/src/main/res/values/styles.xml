<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="fontFamily">@font/opensans_semibold_custom</item>
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="menuButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/opensans_semibold_custom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">27dp</item>
        <item name="android:paddingRight">27dp</item>
        <item name="android:drawable">@drawable/border_bottom_1dp</item>
    </style>

    <!--<style name="SearchViewStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="closeIcon">@color/white</item>
    </style>-->


    <style name="text_in_button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <!--positioning-->
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <!--Text properties-->
        <item name="android:textColor">@color/grey_A50</item>
        <item name="android:textSize">17sp</item>
        <!--margin-->
        <item name="android:layout_marginEnd">0dp</item>
        <!--padding-->
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="next_prev_image">
        <item name="android:layout_width">7dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <!--<style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>-->
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColor">@color/mainOrange</item>
        <!--<item name="android:textColorHint">@color/green</item>-->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/pink_50</item>
        <!--<item name="autoCompleteTextViewStyle">@style/cursorColor</item>-->
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="toolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/mainOrange</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/opensans_semibold_custom</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="progressBar_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/header_background</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!--<style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/mainOrange</item>
    </style>-->

    <!--Alerts-->
    <style name="alert_button_alert" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/user_pools_activity_button_height</item>
        <item name="android:background">@drawable/mystyle_for_button_red_alert</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">Delete</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="alert_button_cancel" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/user_pools_activity_button_height</item>
        <item name="android:background">@drawable/mystyle_for_button_cancel</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:text">Cancel</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="alert_button_ok" parent="@style/alert_button_alert">
        <item name="android:background">@drawable/mystyle_for_button_sign_in</item>
        <item name="android:text">Ok</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="alert_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/header_background</item>
    </style>

    <style name="alert_subTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main</item>
        <!--<item name="android:lineSpacingMultiplier">1.3</item>-->
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="alert_buttons_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="loginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--Text properties-->
        <item name="android:textColorHint">@color/grey_A50</item>
        <item name="android:textColor">@color/primaryBlack</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>


        <!--positioning-->
        <item name="android:gravity">center</item>
        <!--Other properties-->
        <item name="android:background">@drawable/border_bottom_1dp</item>
        <!--Padding-->
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:paddingRight">11dp</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="SearchView" parent="Base.Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search_white_24dp</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/btnAddText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_semibold_custom</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
