<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quizzes_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:layout_marginTop="400dp"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_quizzes"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:background="@color/white"
        android:src="@drawable/splash_logo"
        android:elevation="@dimen/margin_material_small"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/quizzes"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_material"
                android:fontFamily="@font/opensans_regular"
                android:text="17,000+ Questions"
                android:textColor="@color/grey_700"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_material_small"
                android:fontFamily="@font/opensans_regular"
                android:text="Offline Access"
                android:textColor="@color/grey_700"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_material_small"
                android:fontFamily="@font/opensans_regular"
                android:text="Custom Quizzes"
                android:textColor="@color/grey_700"
                android:textSize="12sp" />

            <Button
                android:id="@+id/learnMore"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:text="@string/learn_more"
                android:background="@color/mainOrange"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/margin_material"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>