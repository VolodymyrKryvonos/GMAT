<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/header_background"
    tools:context=".auth.AuthActivity"
    tools:showIn="@layout/activity_auth">

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="167dp"
            android:layout_height="81dp"
            android:src="@drawable/splash_logo"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutParentSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:gravity="center"
        android:layout_below="@id/logo"
        >
        <LinearLayout
            android:id="@+id/layoutSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:paddingRight="30dp"
            >
            <TextView
                android:id="@+id/signIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textAllCaps="true"
                android:textColor="@color/mainOrange"
                android:fontFamily="@font/opensans_semibold"
                android:textSize="24sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutParentSignInGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/layoutParentSignIn"
        android:layout_marginTop="35dp"
        >
        <LinearLayout
            android:id="@+id/layoutSignInGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/signInGoogleIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_google"
                android:tint="@color/mainOrange"
                />
            <TextView
                android:id="@+id/signInGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Sign in"
                android:textAllCaps="true"
                android:textColor="@color/mainOrange"
                android:fontFamily="@font/opensans_semibold"
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutParentSignInFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_below="@id/layoutParentSignInGoogle"
        >
        <LinearLayout
            android:id="@+id/layoutSignInFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="-15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            >
            <ImageView
                android:id="@+id/signInFacebookIcon"
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_facebook"
                android:tint="@color/mainOrange"
                />
            <TextView
                android:id="@+id/signInFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:textAllCaps="true"
                android:textColor="@color/mainOrange"
                android:fontFamily="@font/opensans_semibold"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutParentViewAsGuest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:paddingLeft="35dp"
        android:paddingRight="30dp"
        android:layout_below="@id/layoutParentSignInFacebook"
        >
        <LinearLayout
            android:id="@+id/layoutViewAsGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/viewAsGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View as Guest"
                android:textAllCaps="true"
                android:textColor="@color/mainOrange"
                android:fontFamily="@font/opensans_semibold"
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutParentRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:layout_below="@id/layoutParentViewAsGuest"
        >
        <LinearLayout
            android:id="@+id/layoutRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:paddingRight="30dp"
            >
            <TextView
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textAllCaps="true"
                android:textColor="@color/mainOrange"
                android:fontFamily="@font/opensans_semibold"
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
